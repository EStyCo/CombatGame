<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Client"
    xmlns:views="clr-namespace:Client.MVVM.View"
    xmlns:town="clr-namespace:Client.MVVM.View.Town"
    Shell.FlyoutBehavior="Disabled"
    Title="Client">

    <TabBar x:Name="Mybar">
        <Tab Title="Main">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab Title="Chating" IsVisible="{Binding ShowTabs}">
            <ShellContent ContentTemplate="{DataTemplate views:ChatPage}" Route="ChatPage"/>
        </Tab>
    </TabBar>
</Shell>
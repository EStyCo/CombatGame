<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MVVM.View.Samples.HUD"
             Title="HUD">

    <StackLayout Orientation="Horizontal" 
                 HorizontalOptions="Center"
                 VerticalOptions="Start">

        <Button Text="{Binding UserStore.VitalityService.HudHP}"
                TextColor="PaleVioletRed"
                BorderColor="Transparent"
                BackgroundColor="LightGray"
                BorderWidth="10"/>

        <Button Text="{Binding UserStore.VitalityService.HudMP}"
                BorderColor="Transparent"
                TextColor="DeepSkyBlue"
                BackgroundColor="LightGray"
                BorderWidth="10"/>
        
        <ImageButton Source="movement.png"
                 BackgroundColor="LightGray"
                 CornerRadius="5"
                 HeightRequest="40"
                 WidthRequest="40"
                 Command="{Binding Router.ShowMoveMenuCommand}" />
    </StackLayout>
</ContentPage>
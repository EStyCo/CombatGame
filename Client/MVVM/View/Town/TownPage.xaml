<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MVVM.View.Town.TownPage">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior 
                        IsVisible="False"
                        IsEnabled="False"/>
    </Shell.BackButtonBehavior>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <VerticalStackLayout Spacing="3"
                             Margin="0,10,0,0">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="{Binding UserStore.Character.CharacterName}"
                    TextColor="Black"
                    BackgroundColor="AliceBlue"
                    Command="{Binding ShowCharacterCommand}"/>
                <Button Text="SpellBook"
                    BackgroundColor="AliceBlue"
                    TextColor="Black"
                    Command="{Binding ShowSpellBookCommand}"/>
                <Button Text="Inventory"
                    BackgroundColor="AliceBlue"
                    TextColor="Black"
                    Command="{Binding ShowInventoryCommand}"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Frame HeightRequest="55"
                       CornerRadius="250">
                    <HorizontalStackLayout>
                        <Label Text="{Binding HP.HealthPoint}"
                           TextColor="PaleVioletRed"/>
                        <Label Text="/200"
                           TextColor="PaleVioletRed"/>
                    </HorizontalStackLayout>
                </Frame>
                <Frame HeightRequest="55"
                       CornerRadius="250">
                    <HorizontalStackLayout>
                        <Label Text="{Binding HP.ManaPoint}"
                           TextColor="LightSkyBlue"/>
                        <Label Text="/200"
                           TextColor="LightSkyBlue"/>
                    </HorizontalStackLayout>
                </Frame>
            </HorizontalStackLayout>
        </VerticalStackLayout>


        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">
            
            <VerticalStackLayout WidthRequest="200"
                                 Spacing="5">
                <Frame WidthRequest="300"
                       Margin="0,0,0,25">
                    <Label Text="Рад приветствовать тебя Путник в Нашем городе"/>
                </Frame>

                <Button Text="Break"
                        WidthRequest="200"
                        Command="{Binding BreakCharacterCommand}"/>
                <Button Text="Таверна"/>
                <Button Text="Магазин"/>

                <Button Text="Выйти из города"
                        Margin="0,20,0,0"
                        Command="{Binding GoToGladeCommand}"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>